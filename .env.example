# BNI PALMS Analytics - Environment Variables
# Copy this file to .env and fill in your values

# ==================================
# Backend Configuration (Django)
# ==================================

# Django Secret Key - Generate a new one for production
# You can generate one with: python -c 'from django.core.management.utils import get_random_secret_key; print(get_random_secret_key())'
SECRET_KEY=your-secret-key-here-change-this-in-production

# Django Debug Mode - NEVER set to True in production
DEBUG=True

# Allowed Hosts - Comma-separated list of domains
# Example: localhost,127.0.0.1,yourdomain.com
ALLOWED_HOSTS=localhost,127.0.0.1

# CORS Settings - Allowed origins for frontend
# Example: http://localhost:3000,https://yourdomain.com
CORS_ALLOWED_ORIGINS=http://localhost:3000

# ==================================
# Database Configuration
# ==================================

# Local Development (SQLite) - Default
# DATABASE_URL=sqlite:///db.sqlite3

# Production (PostgreSQL/Supabase)
# DATABASE_URL=postgresql://user:password@host:port/database
# Example: DATABASE_URL=postgresql://postgres:password@db.supabase.co:5432/postgres

# ==================================
# Frontend Configuration (React)
# ==================================

# API Base URL - Where the frontend should connect to the backend
# Local: http://localhost:8000
# Production: https://your-backend-domain.com
REACT_APP_API_BASE_URL=http://localhost:8000

# Environment Type
REACT_APP_ENV=development

# ==================================
# Authentication & Security
# ==================================

# JWT Token Settings
JWT_SECRET_KEY=your-jwt-secret-key-here
JWT_EXPIRATION_HOURS=24

# Admin Password (Temporary - should be moved to database)
ADMIN_PASSWORD=change-this-immediately

# ==================================
# File Upload Settings
# ==================================

# Maximum file upload size in bytes (10MB default)
MAX_UPLOAD_SIZE=10485760

# Allowed file extensions
ALLOWED_FILE_EXTENSIONS=.xls,.xlsx

# ==================================
# Email Configuration (Optional)
# ==================================

# Email Backend
# For development: django.core.mail.backends.console.EmailBackend
# For production: django.core.mail.backends.smtp.EmailBackend
EMAIL_BACKEND=django.core.mail.backends.console.EmailBackend

# SMTP Settings (if using SMTP backend)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=your-email@example.com
EMAIL_HOST_PASSWORD=your-email-password

# Default From Email
DEFAULT_FROM_EMAIL=noreply@bnipalms.com

# ==================================
# Third-Party Services (Optional)
# ==================================

# Sentry Error Tracking
SENTRY_DSN=

# ==================================
# Performance & Caching
# ==================================

# Cache Backend
# For development: django.core.cache.backends.locmem.LocMemCache
# For production: django.core.cache.backends.redis.RedisCache
CACHE_BACKEND=django.core.cache.backends.locmem.LocMemCache

# Redis URL (if using Redis cache)
# REDIS_URL=redis://localhost:6379/0

# ==================================
# Celery (Background Tasks - Optional)
# ==================================

# Celery Broker URL
# CELERY_BROKER_URL=redis://localhost:6379/0

# Celery Result Backend
# CELERY_RESULT_BACKEND=redis://localhost:6379/0

# ==================================
# Logging & Monitoring
# ==================================

# Log Level (DEBUG, INFO, WARNING, ERROR, CRITICAL)
LOG_LEVEL=INFO

# ==================================
# Static & Media Files
# ==================================

# Static Files URL (for production)
STATIC_URL=/static/

# Media Files URL (for uploads)
MEDIA_URL=/media/

# ==================================
# Feature Flags (Optional)
# ==================================

# Enable/Disable specific features
FEATURE_BULK_UPLOAD=True
FEATURE_EXCEL_EXPORT=True
FEATURE_EMAIL_NOTIFICATIONS=False

# ==================================
# Notes
# ==================================

# 1. Never commit .env to version control
# 2. Keep .env.example updated with all required variables
# 3. Use strong, unique values for SECRET_KEY and JWT_SECRET_KEY
# 4. Set DEBUG=False in production
# 5. Update ALLOWED_HOSTS with your production domain
# 6. Use environment-specific values for DATABASE_URL and CORS_ALLOWED_ORIGINS
